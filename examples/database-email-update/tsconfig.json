{
  "compilerOptions": {
    "incremental": true,
    "sourceMap": false,

    "target": "ESNext",
    "module": "commonjs",

    "moduleResolution": "Node",

    "allowSyntheticDefaultImports": true,

    "useDefineForClassFields": false,

    "strict": false,

    "isolatedModules": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.ts", "**/*.js"]
}
