{
	"name": "@repo/notion-sdk-js",
	"version": "0.1.0",
	"private": true,
	"description": "A simple and easy to use client for the Notion API",
	"license": "MIT",
	"sideEffects": false,
	"files": [
		"build/package.json",
		"build/src/**"
	],
	"scripts": {
		"build:packages": "turbo build -F './packages/*'",
		"changeset:new": "run-changeset-new",
		"check:deps": "runx check --deps",
		"check:format": "runx check --format",
		"check:links": "runx check --links",
		"check:spelling": "runx check --spelling",
		"publish": "changeset publish",
		"release": "run-s build:packages publish",
		"test:ci": "run-vitest-ci"
	},
	"dependencies": {
		"@types/node-fetch": "2.6.12",
		"node-fetch": "2.7.0"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.11",
		"@ianvs/prettier-plugin-sort-imports": "4.4.1",
		"@repo/eslint-config": "workspace:*",
		"@repo/tools": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@typescript-eslint/eslint-plugin": "7.18.0",
		"@typescript-eslint/parser": "7.18.0",
		"cspell": "5.21.2",
		"esbuild": "0.25.0",
		"eslint": "8.57.0",
		"markdown-link-check": "3.13.6",
		"npm-run-all2": "7.0.2",
		"prettier": "3.5.3",
		"prettier-plugin-packagejson": "2.5.8",
		"syncpack": "13.0.2",
		"turbo": "2.4.1",
		"typescript": "5.5.4",
		"vitest": "2.1.8"
	},
	"packageManager": "pnpm@10.7.0",
	"engines": {
		"node": ">=20"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"workerd",
			"sharp"
		]
	}
}
